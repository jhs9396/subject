a 
  cursor: pointer

button:active, 
button:focus, button, input 
  outline: none 

h2, h3, h4, p, th
  color: #625955

h2 ,h3, h4, th, strong 
  letter-spacing: -.005rem
  font-family: Open Sans Bold
  font-weight: 400  

.border-grey-jh 
  border-color #625955 

.screen_out 
  height: 0 
  font-size: 0 
  line-height: 0 
  overflow: hidden 
  display: block

.arr, .arr_inner  
  position: absolute
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 6px 12px 6px 0;
  border-color: transparent #b8c2cc transparent transparent;

.arr_inner 
  border-color: transparent #fff transparent transparent;
  border-width: 5px 10px 5px 0; 
  top: -5px; 
  left: 2px;

table tr td:nth-child(2) p, 
.accordian .content li p  
  width: calc(195px - 1rem)
  height: auto  
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap 

// select 
