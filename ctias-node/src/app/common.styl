  // -moz-appearance: none; 
  // appearance: none; 

th, td
  // border-left: 1px solid #b8c2cc
  padding: .5rem 1rem
  word-break: break-word

tbody tr:nth-child(even) td 
  background: #f9f8f5; 

th:first-child, td:first-child
  border-left: none

.item 
  &.node button 
    padding .15rem 0
  
  button 
    // background: linear-gradient(to top, #dedede, #fefefe)
    background: #d9d9d9
  
.item:not(.node) button::before, 
.item:not(.node) button::after
  content:''
  background: #fff
  width: 12.5px
  height: 12.5px
  display: block
  position: absolute
  top: 3px 

.item:not(.node).right button::before, 
.item:not(.node).right button::after 
  transform: rotate(-45deg)

.item:not(.node).left button::before, 
.item:not(.node).left button::after 
  transform: rotate(135deg)

.item:not(.node).right button::before, 
.item:not(.node).left button::before
  left: -6px  

.item:not(.node).right button::after, 
.item:not(.node).left button::after
  right: -6px

.item:not(.node).right button::after
  // background-image: linear-gradient(to right top, #dedede, #fefefe)
  background: #d9d9d9

.item:not(.node).left button::before
  // background-image: linear-gradient(to bottom left, #dedede, #fefefe)
  background: #d9d9d9

.visit div
  background: #f9f8f5

input, textarea, .pages
  font-family: Open Sans;
  font-size 16px

.w-2-5 
  width: 10px 
  
.w-3-5
  width: .9rem 

.p-2-5 
  padding: .75rem 
  
.bg-grey
  background: #f0ede6

.pages
  perspective: 1200px;
  transform-style: preserve-3d;

  .page.active
    visibility: visible;

  .page
    visibility: hidden;
    top: 0
    left: 0

.debug div
  border: 1px dotted darkred
  box-sizing border-box

.propview 
  transition: all .5s ease-in-out
  opacity: 1 
  transform: scale(1) 

  &.active { 
    opacity: 0 
    transform: scale(.5)
  }

.arrow-box 
  position: absolute
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 0 8px 16px 8px;
  border-color: transparent transparent #b8c2cc transparent;

  &::after 
    content:''
    position: absolute; 
    top: 2px
    left: -8px
    width: 0
    height: 0
    border-style: solid;
    border-width: 0 8px 16px 8px;
    border-color: transparent transparent #f0ede6 transparent;

